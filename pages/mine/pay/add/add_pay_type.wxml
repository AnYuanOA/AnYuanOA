<!--pages/mine/pay/add/add_pay_type.wxml-->
<view class='body'>
  <form>
    <view class='add-filed-container'>
      <text class='add-field-title'>账号类型</text>
      <picker class='add-field' mode='selector' range='{{accountTypeList}}' range-key='name' value='{{accountTypeIndex}}' bindchange='onAccountTypePickerChanged'>
        {{accountTypeList[accountTypeIndex].name}}
      </picker>
    </view>

    <view class='add-filed-container'>
      <text class='add-field-title'>银行</text>
      <picker class='add-field' mode='selector' range='{{bankList}}' range-key='name' value='{{bankIndex}}' bindchange='onBankPickerChanged'>
        {{bankList[bankIndex].name}}
      </picker>
    </view>

    <view class='add-filed-container'>
      <text class='add-field-title'>持卡人姓名</text>
      <input class='add-field' placeholder='请输入持卡人姓名'></input>
    </view>

    <view class='add-filed-container'>
      <text class='add-field-title'>银行卡号</text>
      <input class='add-field' placeholder='请输入银行卡号'></input>
    </view>

    <view class='add-btn' hover-class='none'>
      <text class='add-btn-text'>保  存</text>
    </view>
  </form>
</view>
