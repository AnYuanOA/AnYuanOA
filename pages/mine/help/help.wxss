/* pages/mine/help/help.wxss */

.container {
  width: 100%;
  height: 100%;
}

.about-top {
  display: flex;
  background-color: #3c78d8;
  padding: 50px;
}

.about-icon {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}

.about-title2 {
  font-size: 20pt;
  color: white;
  margin-left: 10px;
  margin-top: 5px;
}

.about-bottom {
  margin: 10px;
  border-left: 3px solid #e5e5e5;
}

.about-version {
  padding: 10px;
  text-align: right;
}

.about-version text {
  padding: 2px 10px;
  border-radius: 10px;
  border: 1px solid #3c78d8;
  color: #3c78d8;
  font-size: 10pt;
}

.about-summay {
  padding: 10px 0px 0px 10px;
}

.about-iof {
  padding: 0px 0px 5px;
  border-bottom: 1px solid #e5e5e5;
}

.about-iof text {
  font-size: 10pt;
  color: #8a8a8a;
  font-weight:bold;
}

.about-content {
  padding-top: 5px;
  font-size: 10pt;
}
