/* pages/mine/mine.wxss */
navigator{
  width: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
   background: #54adf4; 
   background-image:linear-gradient(to bottom,#54adf4,#99ccff);
}
.account-bg {
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  font-size: 11pt;
  color: #fff;
  padding-bottom: 15px;
}

.icon-bangding{
  width: 16px;
  height: 16px;
}

.userinfo-bangding{
  display: flex;
  padding-left: 75%;
  padding-top: 10px;
  position:absolute;
}

.userinfo-account-opt{
  font-size: 9pt;
  color: #fff;
}

/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item {
  border-bottom:1px solid #f0f0f0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 15px;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10px;
}
.item-text {
  width: 80%;
  text-overflow: ellipsis;
  color: #393939;
  font-size:10pt;
}
.icon-right{
  float: right;
  width: 10px;
  height: 10px;
}

/**我的操作按钮**/
.personBtn button{
  color: white;
  margin: 20px;
  background-color: #54adf4;
}