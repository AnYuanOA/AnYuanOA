/* pages/mine/mine.wxss */
navigator{
  width: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #54adf4;
}
.account-bg {
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  font-size: 15px;
  color: #fff;
  padding-bottom: 20px;
}

/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item {
  border-bottom: 3px solid #f3f3f3;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  width: 100%;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  width: 300px;
  text-overflow: ellipsis;
  color: #393939;
  font-size:30rpx;
}
.icon-right{
  float: right;
  width: 10px;
  height: 10px;
}

/**我的操作按钮**/
.personBtn button{
  color: white;
  margin: 20px;
  background-color: #54adf4;
}