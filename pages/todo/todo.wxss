.todo_container {
  background-color: #f0f0f0;
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.switch_header {
  padding-bottom: 10px;
  width: 100%;
  flex-grow: 0;
  flex-shrink: 0;
}

.switch_container {
  width: 100%;
  height: 40px;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.switch_item {
  width: 50%;
  height: 40px;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 15px;
}

.switch_slider_container {
  width: 100%;
  height: 3px;
  background-color: #fff;
}

.switch_slider {
  width: 50%;
  height: 3px;
  background-color: #54adf4;
}

.content_container {
  flex-grow: 1;
}

.list-item {
  display: flex;
  flex-direction: row;
  background-color: white;
  border-bottom: solid 1px #f0f0f0;
  padding-top: 10px;
  padding-bottom: 10px;
}

.list-item-icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-left: 14px;
  flex-grow: 0;
  flex-shrink: 0;
}

.list-item-content {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  flex-grow: 1;
}

.list-item-content-title {
  margin-top: 8px;
  color: #535353;
  font-size: 14px;
  font-weight: bold;
}

.list-item-content-nick-name {
  margin-top: 2px;
  color: #ccc;
  font-size: 13px;
}

.list-item-state {
  width: 50px;
  height: 50px;
  margin-right: 20px;
  flex-grow: 0;
  flex-shrink: 0;
}

