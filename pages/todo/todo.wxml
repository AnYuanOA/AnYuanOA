<view class='todo_container'>
  <view class="switch_header">
    <view class="switch_item {{showType==1 ? 'on' : ''}}" bindtap='tapTodo'>
      <text>待办</text>
    </view>
    <view class="switch_item {{showType==2 ? 'on' : ''}}" bindtap='tapToRead'>
      <text>待阅</text>
    </view>
  </view>

  <!-- 待办视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=1}}'>
    <block wx:for="{{todoList}}">
      <navigator url="/pages/workflow/detail?pageType=1&appId={{item.appId}}" class="todo-item-navigator">
        <view class='item-bottom-do'>
          <text class="item-db-type">{{item.appType}}</text>
          <image class="item-bottom-img" src='/images/todo/icon_todo_db_top1.png'></image>
        </view>
        <view class='list-item-db'>
          <view class="list-item-db-title">
            <text>{{item.appTitle}}</text>
          </view>
          <view class="list-item-db-content">
            <text>{{item.appUserName}}</text>
            <text>{{item.appBeginTime}}</text>
          </view>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->

  <!-- 待阅视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=2}}'>
    <block wx:for="{{toReadList}}">
      <navigator url="/pages/workflow/detail?pageType=2&appId={{item.appId}}" class="todo-item-navigator">
        <view class='item-bottom-do'>
          <text class="item-db-type">{{item.orderType}}</text>
          <image class="item-bottom-img" src='/images/todo/icon_todo_dy2.png'></image>
        </view>
        <view class='list-item-db'>
          <view class="list-item-db-title">
            <text>{{item.obj_Title}}</text>
          </view>
          <view class="list-item-db-content">
            <view class="item-dy-user-send">
              <text>{{item.userName}}</text>
            </view>
            <text>{{item.orderId}}</text>
          </view>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->
</view>