<view class='todo_container'>
  <view class="switch_header">
    <view class="switch_item {{showType==1 ? 'on' : ''}}" bindtap='tapTodo'>
      <text>待办</text>
    </view>
    <view class="switch_item {{showType==2 ? 'on' : ''}}" bindtap='tapToRead'>
      <text>待阅</text>
    </view>
  </view>

  <!-- 待办视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=1}}'>
    <block wx:for="{{todoList}}">
      <navigator url="/pages/workflow/detail?pageType=1" class="todo-item-navigator">
        <view class='item-bottom-do'>
          <text class="item-db-type {{item.applyType==1?'yongche':'xiujia'}}">{{item.applyType==1?'用车':'休假'}}</text>
          <text class="item-bottom-txt">待审批</text>
          <image class="item-bottom-img" src='/resources/images/todo/icon_todo_db_top.png'></image>
        </view>
        <view class='list-item-db'>
          <view class="list-item-db-title">
            <text>{{item.typeTitle}}</text>
          </view>
          <view class="list-item-db-content">
            <text>{{item.publish_name}}</text>
            <text>{{item.publish_time}}</text>
          </view>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->

  <!-- 待阅视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=2}}'>
    <block wx:for="{{toReadList}}">
      <navigator url="/pages/workflow/detail?pageType=2" class="todo-item-navigator">
        <view class='item-bottom-do'>
          <text class="item-bottom-txt">请查阅</text>
          <image class="item-bottom-img" src='/resources/images/todo/icon_todo_dy.png'></image>
        </view>
        <view class='list-item-db'>
          <view class="list-item-db-title">
            <text>{{item.typeTitle}}</text>
          </view>
          <view class="list-item-db-content">
            <view class="item-dy-user-send">
              <text>{{item.publish_name}}</text>
              <image class="item-bottom-img" src='/resources/images/todo/icon_to_dy_send.png'></image>
            </view>
            <text>{{item.publish_time}}</text>
          </view>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->
</view>