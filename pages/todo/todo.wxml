<view class='todo_container'>
  <view class="switch_header">
    <view class='switch_container'>
      <view class='switch_item' style='color: {{showType==1?"#54adf4":"#000"}};' bindtap='tapTodo'>
        <text>待办</text>
      </view>
      <view class='switch_item' style='color: {{showType==2?"#54adf4":"#000"}};' bindtap='tapToRead'>
        <text>待阅</text>
      </view>
    </view>
    <view class='switch_slider_container'>
      <view class='switch_slider' wx:if="{{showType==1}}" style='margin-left:0%'/>
      <view class='switch_slider' wx:if="{{showType==2}}" style='margin-left:50%'/>
    </view>
  </view>

  <!-- 待办视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=1}}'>
    <block wx:for="{{todoList}}">
      <navigator url="/pages/workflow/detail?type={{item.type}}&id={{item.articleid}}" hover-class="none">
        <view class='list-item'>
          <image class='list-item-icon' src='{{userInfo.avatarUrl}}'/>
          <view class='list-item-content'>
            <text class='list-item-content-title'>{{item.typeTitle}}</text>
            <text class='list-item-content-nick-name'>{{item.publish_name}}  {{item.publish_time}}</text>
          </view>
          <image class='list-item-state' src='/resources/images/todo/icon_approve_state_wait.png'/>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->

  <!-- 待阅视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=2}}'>
    <block wx:for="{{toReadList}}">
      <navigator url="/pages/workflow/detail?type={{item.type}}&id={{item.articleid}}" hover-class="none">
        <view class='list-item'>
          <image class='list-item-icon' src='{{userInfo.avatarUrl}}'/>
          <view class='list-item-content'>
            <text class='list-item-content-title'>{{item.typeTitle}}</text>
            <text class='list-item-content-nick-name'>{{item.publish_name}}  {{item.publish_time}}</text>
          </view>
          <image class='list-item-state' src='/resources/images/todo/icon_approve_state_pass.png'/>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->
</view>
