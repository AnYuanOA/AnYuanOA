<view class='todo_container'>
  <view class="switch_header">
    <view class='switch_container'>
      <view class="switch_item {{showType==1 ? 'on' : ''}}" bindtap='tapTodo'>
        <text>待办</text>
      </view>
      <view class="switch_item {{showType==2 ? 'on' : ''}}" bindtap='tapToRead'>
        <text>待阅</text>
      </view>
    </view>
    <view class='switch_slider_container'>
      <view class='switch_slider' wx:if="{{showType==1}}" style='margin-left:0%'/>
      <view class='switch_slider' wx:if="{{showType==2}}" style='margin-left:50%'/>
    </view>
  </view>

  <!-- 待办视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=1}}'>
    <block wx:for="{{todoList}}">
      <navigator url="/pages/workflow/detail?pageType=1" hover-class="none">
        <view class='item-bottom-do'>
          <text>请审批</text>
        </view>
        <view class='list-item list-db'>
          <view class='item-apply-type'>
            <image class='list-item-icon' src='{{item.icoUrl}}'/>
            <text>{{item.applyType==1?'用车':'休假'}}</text>
          </view>
          <view class='list-item-content'>
            <text class='list-item-content-title'>主题：{{item.typeTitle}}</text>
            <text class='list-item-content-nick-name highlight'>人员：{{item.publish_name}}</text>
            <text class='list-item-content-time'>日期：{{item.publish_time}}</text>
          </view>
          <image class='list-item-state' src='/resources/images/todo/icon_undo.png'/>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->

  <!-- 待阅视图 -->
  <scroll-view class='content_container' scroll-y hidden='{{showType!=2}}'>
    <block wx:for="{{toReadList}}">
      <navigator url="/pages/workflow/detail?pageType=2" hover-class="none">
        <view class='item-bottom-do'>
          <text>请查阅</text>
        </view>
        <view class='list-item'>
          <view class='item-apply-type'>
            <image class='list-item-icon' src='/resources/images/todo/icon_unsee.png'/>
            <text>事项</text>
          </view>
          <view class='list-item-content'>
            <text class='list-item-content-title'>主题：{{item.typeTitle}}</text>
            <text class='list-item-content-nick-name highlight'>人员：{{item.publish_name}}</text>
            <text class='list-item-content-time'>日期：{{item.publish_time}}</text>
          </view>
          <image class='list-item-state' src='/resources/images/todo/icon_item_unsee.png'/>
        </view>
      </navigator>
    </block>
  </scroll-view>
  <!--  -->
</view>
