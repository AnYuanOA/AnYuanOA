/**login.wxss**/

.container {
  background-color: #fff;
  height: 100%;
}

.login-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50px 0px 0px 0px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.login-form {
  flex-direction: column;
  align-items: center;
  padding: 50px 0px;
}

.login-input {
  display: flex;
  align-items: center;
  background-color: #f7f7ff;
  margin: 20px;
  border-radius: 50px;
  border: 1px solid white;
}

.active{
  border: 1px solid #3c78d8;
}

.input-icon {
  width: 20px;
  height: 15px;
  padding: 0px 15px;
  border-right: 1px solid #3c78d8;
}

.input-text {
  width: 100%;
  height: 40px;
  font-size: 11pt;
  padding: 5px 15px;
  font-weight: bold;
}

.login-btn {
  background-color: #3c78d8;
  color: #fff;
  font-size: 13pt;
  text-align: center;
  margin: 50px 20px;
  border-radius: 50px;
}
