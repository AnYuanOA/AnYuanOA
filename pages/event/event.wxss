.event-body {
  display: flex;
  text-align: left;
  padding: 30px 10px;
  background-color: #fff;
}

.event-body text {
  font-size: 10pt;
  width: 100%;
  text-indent: 20px;
  letter-spacing: 1px;
  line-height: 150%;
}

.event-goto {
  display: flex;
  text-align: center;
  justify-content: space-between;
  padding: 5px 10px;
  border-top: 1px solid #f0f0f0;
  background-color: #fff;
}

.event-goto text {
  font-size: 9pt;
  color: #8a8a8a;
}

.event-goto image {
  width: 20px;
  height: 20px;
}
