<!--pages/emp/emp.wxml-->
<view class="index">

  <view class="head">
    <view class="title"> <image bindtap="topSure" class="widget__arrow"  mode="scaleToFill" src="/resources/images/emp/srue.png"/>湖北安源安全环保科技有限公司</view>
  </view>

  <view class="body">
    <view class="widgets">
      <block wx:for-items="{{list}}">

        <view class="widgets__item">

          <view id="{{item.id}}" class="widgets__info {{item.open ? 'widgets__info_show' : ''}}" bindtap="widgetsToggle">
            <text class="widgets__info-name">{{item.name}}</text>
            <image class="widgets__info-img" src="/resources/images/emp/arrowright.png" mode="aspectFill" />
          </view>
          <view class="widgets__list {{item.open ? 'widgets__list_show' : ''}}">
          <checkbox-group bindchange="checkboxChange">

            <block class="checkbox" wx:for-items="{{item.userName}}" wx:for-item="name">
             
              <view class="widget" hover-start-time="10" hover-stay-time="100">
               
              <checkbox value="{{id}}" checked="{{item.checked}}"/>
              <image class="widget__img" src="/resources/images/emp/emp.png" mode="aspectFill" /> {{userName}}
               
                <text class="widget__name">{{name}}</text>
                <text class="orgText">{{item.org[index]}}</text>                
                <view class="widget__line {{index == 0 ? 'widget__line_first' : ''}}"></view>
              </view>
            </block>

          </checkbox-group>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>
