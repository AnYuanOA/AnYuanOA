<!--pages/emp/emp.wxml-->
<view class="index">

  <view class="head">
    <view class="title">湖北安源安全环保科技有限公司</view>
  </view>

  <view class="body">
    <view class="widgets">
      <block wx:for-items="{{list}}">

        <view class="widgets__item">

          <view id="{{item.id}}" style="background-color:{{item.color}}" class="widgets__info {{item.open ? 'widgets__info_show' : ''}}" bindtap="widgetsToggle">
            <image class="widget__img" src="/resources/images/emp/emp.png" mode="aspectFill" /> 
            <text class="widgets__info-name">{{item.name}}</text>
            <image class="widgets__info-img" src="/resources/images/emp/arrowright.png" mode="aspectFill" />
          </view>
          <view class="widgets__list {{item.open ? 'widgets__list_show' : ''}}">
          <checkbox-group bindchange="checkboxChange">

            <block class="checkbox" wx:for-items="{{item.userName}}" wx:for-item="name">
             
              <view class="widget" style="background-color:{{item.color}}" hover-start-time="10" hover-stay-time="100">
               
              <checkbox value="{{id}}" checked="{{item.checked}}"/>
              <image class="widget__img" src="/resources/images/emp/emp.png" mode="aspectFill" /> {{userName}}
               
                <text class="widget__name" style='font-size:12px'>{{name}}</text>
                <text class="orgText" style='font-size:12px'>{{item.org[index]}}</text>                
                <view class="widget__line {{index == 0 ? 'widget__line_first' : ''}}"></view>
              </view>
            </block>

          </checkbox-group>
          </view>
        </view>
      </block>
    </view>
  </view>
  <view class="submit-declare" >
    <text>确定</text>
  </view>

</view>
