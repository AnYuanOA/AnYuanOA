<view class="bottomGrayboder toptab" >
    <view bindtap="tap_d9c62767" class="toptabWrap" >
        <view bindtap="tap_notRead" style='color: {{showType==1?"#54adf4":"#757575"}};border-bottom-style: {{showType==1?"solid":""}};' class="toptabItem" >
            未阅
        </view>
        <view bindtap="tap_collect" style='color: {{showType==2?"#54adf4":"#757575"}};border-bottom-style: {{showType==2?"solid":""}};'class="toptabItem" >
            收藏
        </view>
        <view bindtap="tap_sent" style='color: {{showType==3?"#54adf4":"#757575"}};border-bottom-style: {{showType==3?"solid":""}};' class="toptabItem" >
            已发
        </view>
        <view bindtap="tap_received" style='color: {{showType==4?"#54adf4":"#757575"}};border-bottom-style: {{showType==4?"solid":""}};' class="toptabItem" >
            已收
        </view>
    </view>
</view>

<scroll-view class="c-minheight wx-scroll-view_MBKQjG"  lower-threshold="50" scroll-y="True" style="overflow-x: hidden; overflow-y: auto; " upper-threshold="50" >
    <view class="weui-panel_access" wx:for-items="{{list}}">
        <view class="weui-panel__hd" >
            <image class="wx-image_fo928m"  mode="scaleToFill" src="{{userInfo.avatarUrl}}"/>
            <text class="c-block wx-text_v5HHOl" >{{item.sendUser}}</text>
            <text class="c-block wx-text_j0cnPh" >{{item.sendDate}}</text>
        </view>
        <view class="weui-panel__bd" >
            <view class="weui-media-box__bd" />
            <view class="weui-media-box_block" >
                <view class="weui-media-box__bd" >
                    <text class="c-block weui-media-box__desc" >{{item.comment}}</text>
                    <image class="wx-image_Zd6uCL"  mode="scaleToFill" src="/resources/images/call/1.jpg" />
                    <image class="wx-image_Zd6uCL"  mode="scaleToFill" src="/resources/images/call/2.jpg" />
                </view>
            </view>
        </view>
        <view class="weui-media-box__info" >
            <image bindtap="actioncnt" class="wx-image_keep" src="/resources/images/call/skip.png" />
            <image bindtap="keepcnt" class="wx-image_keep"   src="/resources/images/call/keep.png" />
            <image bindtap="deletecnt" class="wx-image_keep"   src="/resources/images/call/trash.png" /> 
        </view>
    </view>

<view>  
<contact-button type="default-dark" size="20" session-from="weapp" class="img-plus-style zindex100 yc">
</contact-button>
<image src="/resources/images/call/upload.png" class="img-plus-style1" bindtap="addCall"></image>
</view>  

</scroll-view>