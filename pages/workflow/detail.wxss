}

.approve-state-item-info-nick {

}

.approve-state-item-info-state {

}

.approve-state-item-info-desc {

}

.approve-state-item-info-time {

}

.operation-panel {
  position: fixed;
  height: 40px;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.operation-panel-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
}

.operation-panel-item-icon {
  width: 20px;
  height: 20px;
  margin-right: 12px;
  margin-top: 4px;
}

.operation-panel-item-text {
  color: #939393;
  font-size: 15px;
}
