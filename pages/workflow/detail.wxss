/* pages/workflow/detail.wxss */

.workflow-container {
  background-color:#f0f0f0;
  height:100%;
}

.workflow-container-main {
  margin-bottom: 40px;
  padding-bottom: 14px;
}

.approve-info-header {
  background-color: white;
  height: 70px;
  display: flex;
  flex-direction: row;
}

.approve-info-header-avatar {
  width: 50px;
  height: 50px;
  margin-left: 14px;
  margin-top: 8px;
  border-radius: 50%;
}

.approve-info-header-info {
  display: flex;
  flex-direction: column;
  padding-left: 14px;
  padding-top: 10px;
}

.approve-info-header-state {
  font-size: 14px;
  color: #54adf4;
  margin-top: 4px;
}

.approve-info-header-state-icon-container {
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.approve-info-header-state-icon {
  margin-right: 14px;
  width: 50px;
  height: 50px;
}

.approve-info-main {
  background-color: white;
  padding-top: 8px;
}

.approve-info-main-item {
  display: flex;
  flex-direction: row;
  padding-bottom: 8px;
}

.approve-info-main-item-title {
  font-size: 14px;
  color: #434343;
  margin-left: 4px;
  line-height: 20px;
  flex-shrink: 0;
}

.approve-info-main-item-desc {
  font-size: 14px;
  color: #aaaaaa;
  padding-left: 8px;
  line-height: 20px;
  padding-right: 4px;
}

.approve-state-item {
  display: flex;
  flex-direction: row;
  align-items: stretch;
}

.approve-state-item-cover {
  width: 22px;
  flex-shrink: 0;
}

.approve-state-item-cover-line {
  width: 1px;
  height: 100%;
  background-color: #dddddd;
  margin-left: 10.5px;
}

.approve-state-item-cover-icon {
  width: 16px;
  height: 16px;
  margin-left: -7px;
  margin-top: 30px;
}

.approve-state-item-info {
  margin-top: 18px;
  border-radius: 4px;
  background-color: white;
  margin-left: 4px;
  margin-right: 8px;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  padding-bottom: 8px;
}

.approve-state-item-info-avatar {
  width: 50px;
  height: 50px;
  margin-left: 18px;
  margin-top: 14px;
  border-radius: 50%;
  flex-shrink: 0;
}

.approve-state-item-info-state-container {
  display: flex;
  flex-direction: column; 
  flex-grow: 1;
}

.approve-state-item-info-nick-container {
  margin-top: 18px;
  align-self: stretch;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.approve-state-item-info-nick {
  font-size: 16px;
  /* margin-top: 18px; */
  margin-left: 8px;
}

.approve-state-item-info-state {
  font-size: 13px;
  margin-top: 4px;
  margin-left: 8px;
  color: lightgreen;
}

.approve-state-item-info-desc {
  font-size: 13px;
  color: #aaaaaa;
  padding-left: 8px;
  padding-right: 14px;
  padding-top: 4px;
}

.approve-state-item-info-time {
  margin-right: 14px;
  color: #aaaaaa;
  font-size: 13px;
}

.operation-panel {
  position: fixed;
  height: 40px;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.operation-panel-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 50%;
}

.operation-panel-item-icon {
  width: 20px;
  height: 20px;
  margin-right: 12px;
  margin-top: 4px;
}

.operation-panel-item-text {
  color: #939393;
  font-size: 15px;
}
