/* pages/apply/selectEmp/selectEmp.wxss */

.radio_group {
  background-color: white;
}

.radio_label {
  display: flex;
  width: 100%;
  height: 30px;
  padding: 5px 5px;
  border: 1px solid #eee;
  margin: 10px;
  font-size: 11pt;
  align-items: center;
}

.submit-view {
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  text-align: center;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.submit-button {
  background: #3c78d8;
  color: #fff;
  font-size: 10pt;
  width: 100%;
  border-radius: 0px;
  margin: 5px;
}
