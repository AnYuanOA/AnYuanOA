<!--jy.wxml-->
<view class="container">
  <view class="user-jy">
    <view class="user-jy-item">
      <view class="user-jy-tp">
        <text class="user-jy-hd">审批中</text>
      </view>
      <view class="user-jy-bd">
        <text class="user-jy-value">100</text>
        <text class="user-jy-text">条</text>
      </view>
    </view>
    <view class="user-jy-item">
      <view class="user-jy-tp">
        <text class="user-jy-hd">已完成</text>
      </view>
      <view class="user-jy-bd">
        <text class="user-jy-value">20</text>
        <text class="user-jy-text">条</text>
      </view>
    </view>
    <view class="user-jy-item">
      <view class="user-jy-tp">
        <text class="user-jy-hd">已驳回</text>
      </view>
      <view class="user-jy-bd">
        <text class="user-jy-value">80</text>
        <text class="user-jy-text">条</text>
      </view>
    </view>
  </view>
  <!-- <view wx:if="{{jyData.nothing}}" class="remind-box">
        <image class="remind-img" src="/images/index/nothing.png"></image>
        <text class="remind-text">当前无记录</text>
    </view> -->

  <scroll-view class="scroll-view">
    <view class="book-list">
      <text class="current-type">最近申请记录</text>
      <block wx:for="{{applyList}}">
        <navigator class="book-wraper" url="../apply/detail/detail">
          <view class="book-name">
              <block wx:if="{{item.applyType=='用车'}}">
                <image class="book-type-icon" src="/resources/images/apply/icon_type_car.png"></image>
              </block>
              <block wx:else>
                <image class="book-type-icon" src="/resources/images/apply/icon_type_day.png"></image>
              </block>
              <text>{{item.applyTitle}}</text>
            </view>
            <view class="book-date">
              <view class="book-date-text">
                <text>申请日期：{{item.applyDate}}</text>
              </view>
              <view class="book-date-text">
                <text>申请人：{{item.applyEmp}}</text>
              </view>
            </view>
            <view class="book-detail">
              <text>点击查看详情</text>
              <image class="book-see-icon" src="/resources/images/apply/icon_see.png"></image>
            </view>
        </navigator>
      </block>
    </view>
  </scroll-view>
</view>