/**jy.wxss**/
.container {
    background-color: #f7f7f7;
}
.user-jy {
    display: flex;
    background: #fefefe;
    border-bottom: 1rpx solid #eee;
}
.user-jy-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: 11pt;
    line-height: 150%;
    height: 150rpx;
    padding: 20rpx;
    border-right: 1rpx solid #eee;
}
.wait-num{
  background-color: #54adf4;
}
.complete-num{
  background-color: #7acfa6;
}
.refuse-num{
  background-color: #e78ab0;
}
.wait-value{
  color: #54adf4;
}
.complete-value{
  color: #7acfa6;
}
.refuse-value{
  color: #e78ab0;
}
.user-jy-dbet {
    border: none;
}
.user-jy-hd {
  text-align: center;
  border: 1 solid #54adf4;
  border-radius: 5px;
  padding: 5px 5px 5px 5px;
    color: white;
}
.user-jy-bd {
    display: flex;
    justify-content: center;
}
.user-jy-value {
    font-size: 28pt;
    font-weight: bold;
    line-height: 150%;
    padding: 0 20rpx 0 30rpx;
}
.user-jy-text {
    color: #999;
    font-size: 10pt;
    line-height: 200%;
    align-self: flex-end;
}
.book-list {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    padding: 25rpx 30rpx;
}
.current-type {
    color: #777;
    font-size: 10pt;
    font-weight: 800;
    line-height: 200%;
    margin-bottom: 15rpx;
}
.book-wraper {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: space-between;
    overflow: hidden;
    padding: 35rpx 30rpx 10rpx;
    margin-bottom: 20rpx;
    background: #fff;
    border-radius: 3px;
}
.book-wraper-wait{
  background-color: #54adf4;
}
.book-wraper-complete{
  background-color: #7acfa6;
}
.book-wraper-refuse{
  background-color: #e78ab0;
}
.book-name {
    color: white;
}
.book-date {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-top: 25rpx;
    font-size: 9pt;
    color: white;
}
.book-img {
    float: right;
    height: 30px;
    width: 30px;
}
.book-detail{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.book-detail text{
  padding-top:10px; 
  color: white;
  text-align: center;
  font-size: 10pt;
  /* background-color: white; */
  border: 1 solid white;
  border-radius: 5px;
}