/* pages/apply/carApply/carApply.wxss */
.repair-detail {
  padding: 5px;
}

.repair-detail-item {
  border-bottom: 1px solid #ddd;
  display: flex;
  padding: 10px 5px;
  justify-content: space-between;
  height: 20px;
}

.repair-detail-picker {
  align-items: center;
  justify-content: flex-end;
  text-align: center;
}

.repair-detail-info {
  font-size: 11pt;
  float: right;
  text-align: right;
  width: 200px;
}

.repair-detail-name {
  width: 80px;
  border-right: 1px solid #ddd;
  font-size: 10pt;
  text-align: right;
  padding-right: 5px;
}

.declare-context-title {
  font-size: 10pt;
  background-color: #f7f7ff;
  color: #707070;
  padding: 8px;
  text-align: center;
}

.repair-content-title {
  color: black;
  font-size: 12pt;
  text-align: center;
  border-bottom: 1px solid #ddd;
  padding: 5px;
}

.repair-content-textArea {
  color: black;
  font-size: 12pt;
  width: 100%;
  padding-top: 10px;
}

.submit-declare {
  padding: 10px;
}

.submit-button {
  background: #54adf4;
  color: #fff;
  font-size: 16px;
  border-radius: 5px;
}
