/* pages/apply/carApply/carApply.wxss */
.repair-detail {
  padding: 5px 20px;
}

.repair-detail-item {
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  padding: 10px 5px;
  height: 20px;
}

.repair-detail-picker {
  align-items: center;
  justify-content: flex-end;
  text-align: center;
}

.repair-detail-info {
  font-size: 10pt;
  float: left;
  width: 80%;
}

.repair-detail-name {
  width: 80px;
  font-size: 10pt;
  text-align: right;
  padding-right: 5px;
}

.declare-context-title {
  display: flex;
  font-size: 10pt;
  background-color: #f7f7ff;
  color: #707070;
  padding: 8px;
}

.repair-content-title {
  color: black;
  font-size: 11pt;
  text-align: center;
  border-bottom: 1px solid #e6e6e6;
  padding: 5px;
}

.repair-content-textArea {
  color: black;
  font-size: 11pt;
  width: 100%;
  padding-top: 10px;
  border-bottom: 1px solid #e6e6e6;
}

.submit-button {
  background: #3c78d8;
  color: #fff;
  display: flex;
  position: fixed;
  bottom: 0;
  width: 95%;
  height: 50px;
  z-index: 5;
  justify-content:center;
  margin: 10px;
}

.picker{
  width: 80%;
}