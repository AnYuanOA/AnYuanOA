/* pages/apply/carApply/carApply.wxss */

.switch_header {
  display: table;
  table-layout: fixed;
  text-align: center;
  width: 100%;
  line-height: 30px;
  position: fixed;
  z-index: 10;
  background-color: #f7f7f7;
}

.switch_item {
  width: 50%;
  display: table-cell;
  text-align: center;
  position: relative;
  /* color: #bfbfbf; */
  margin: 0px 10px;
}

.switch_item text {
  font-size: 10pt;
}

.on {
  color: #3c78d8;
  border-bottom: 3px solid #3c78d8;
}

.day_apply_view {
  padding-top: 35px;
  padding-bottom: 45px;
}

.apply_item_view {
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  font-size: 11pt;
  padding: 10px 0px;
  margin: 0px 10px;
  border-bottom: 1px solid #e6e6e6;
}

.left_text {
  font-size: 10pt;
}

.right_info {
  border: 1px solid #e6e6e6;
  border-radius: 5px;
  width: 70%;
  /* text-align: right; */
  padding: 3px 5px;
  /* text-align: center;
  align-items: center;
  justify-content: center;
  display: flex; */
}

.reson_input {
  height: 150px;
}

.no_border {
  border: 1px solid white;
}

.radio {
  margin: 5px;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.submit-view {
  display: flex;
  background-color: #f7f7f7;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  text-align: center;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.submit-button {
  background: #3c78d8;
  color: #fff;
  font-size: 10pt;
  width: 100%;
  margin: 0px 3px;
}

.seled_nvgt{
  width: 100%
}

.selemp-button{
  background: #3c78d8;
  color: #fff;
  font-size: 10pt;
  width: 100%;
  border-radius: 0px;
}

.seled_emp{
  width: 100%;
}