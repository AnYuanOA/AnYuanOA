.apply-state-panel {
  display: flex;
  flex-direction: column;
}

.apply-state-title {
  /* background-color: #f7f7ff; */
  font-size: 12pt;
  color: #888;
  font-weight: bold;
  padding: 5px 0px 5px 10px;
}

.apply-state {
  display: block;
  padding-bottom: 25px;
}

.apply-state-item {
  display: flex;
}

.apply-state-icon {
  width: 15px;
  height: 13px;
  border-radius: 50rpx;
  background-color: #dbdbdb;
  border: 3px solid #eee;
  margin: 7px 10px;
}

.icon-color1 {
  background-color: #3c78d8;
}

.icon-color2 {
  background-color: #19CAAD;
}

.icon-color3 {
  background-color: #F4606C;
}

