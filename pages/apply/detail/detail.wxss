.apply-state-info {
  position: relative;
  margin-top: 25px;
  margin-right: 20px;
  width: 100%;
  padding: 0px 10px;
}

.apply-state-info::before {
  position: absolute;
  top: 5px;
  left: -20px;
  content: '';
  width: 5rpx;
  background: #eee;
  height: 100%;
}

.last::before {
  background: transparent;
  width: 0;
  height: 0;
}

.apply-state-name {
  display: flex;
  font-size: 10pt;
  font-weight: bold;
  padding: 15px 0px 5px 0px;
  justify-content: space-between;
}

.apply-state-detail {
  display: flex;
  font-size: 10pt;
  padding: 5px 0px 5px 0px;
  justify-content: space-between;
}

.apply-detail-panel {
  display: flex;
  flex-direction: column;
}

.apply-content {
  color: #515151;
}

.apply-detail-title {
  display: block;
  padding: 3px 10px;
  font-size: 12pt;
  text-align: center;
}

.apply-detail-content {
  font-size: 10pt;
  display: block;
  padding: 0px 10px;
}
