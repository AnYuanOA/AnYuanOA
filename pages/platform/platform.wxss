/* pages/platform/platform.wxss */

.container {
  background-color: #fff;
  height: 100%;
}

.news-swiper {
  width: 100%;
  height: 120px;
}

.news-item {
  display: flex;
  flex-direction: column;
}

.item-top {
  display: flex;
  align-items: center;
  padding: 5px;
  background-color: #3c78d8;
  color: #fff;
  width: 100%;
  height: 20px;
}

.title-icon {
  width: 18px;
  height: 18px;
}

.item-title {
  font-size: 12pt;
  font-weight: bold;
  padding: 0px 5px;
}

.item-content {
  font-size: 9pt;
}

.item-bottom {
  display: flex;
  color: #8a8a8a;
  width: 100%;
  height: 80px;
}

.item-detail {
  font-size: 10pt;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  padding: 3px;
}

/***应用区**/
.platform-opt {
  display: block;
}

.opt-title {
  background-color: #f7f7ff;
}

.opt-title-text {
  font-size: 12pt;
  padding: 3px 10px;
  color: #8a8a8a;
}

.opt-coloum {
  display: -webkit-box;
  padding: 10px 5px;
}

.opt-item {
  display: inline-block;
  -webkit-box-flex: 1;
  text-align: center;
  margin: 10px 20px 0px 20px;
}

.opt-item-navi {
  width: 50px;
  height: 50px;
}

.opt-item-img {
  width: 30px;
  height: 30px;
  margin-top: 10px;
}

.opt-item-text {
  font-size: 10pt;
  display: block;
}
