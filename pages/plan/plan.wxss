/* pages/plan/plan.wxss */

.container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.plan-view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  /* background-color: #f5f5f5; *//* height: 100%; *//* padding-bottom: 20px; *//* padding-top: 40px; *//* padding:0 10% 0 17%; */
}

.plan-cell {
  /* margin: 20px; */
  text-align: center;
  width: 50%;
  height: 50%;
  display: flex;
  flex-wrap: wrap;
}

.cricle {
  display: flex;
  font-size: 2rem;
  color: #f7f7ff;
  width: 100px;
  height: 100px;
  border-radius: 50px;
  margin: auto;
  align-items: center;
  text-align: center;
  justify-content: center;
}

.plan-year {
  background-color: #ffcb63;
}

.plan-quart {
  background-color: #f4606c;
}

.plan-month {
  background-color: #7acfa6;
}

.plan-week {
  background-color: #73b4ef;
}

.plan-text {
  font-size: 1rem;
  width: 100%;
}

.canvas {
  width: 100%;
  height: 220px;
}
