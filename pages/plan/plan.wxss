.plan-view{
  display: flex;
  margin: auto;
}

.plan-cell{
  margin: 20px;
  text-align: center;
}

.cricle{
  display: block;
  font-size: 40pt;
  color: #f7f7ff;
  width: 80px;
  height: 80px;
  border-radius: 50px;
}

.plan-year{
  background-color: #ffcb63;
}

.plan-quart{
  background-color: #F4606C;
}

.plan-month{
  background-color: #7acfa6;
}

.plan-week{
  background-color: #73b4ef;
}

.plan-text{
  font-size: 10pt;
}

.canvas {
    width: 100%;
    height: 220px;
}