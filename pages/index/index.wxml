<view class="container">

  <block wx:for="{{chatList}}" wx:key="chat.target" wx:for-item="chat">
    <navigator bindtap='clickChat' data-chatlist="{{chatList}}" data-chat="{{chat}}" url='{{chat.url ? chat.url:"/pages/message/newMessage/newMessage?name="+chat.target+","+chat.name+","+chat.avator}}'>
      <view class='list-item'>
        <image class='list-item-icon' src='{{chat.avator}}' />
        <block wx:if="{{chat.notReadCount==0}}">
        </block>
        <block wx:else>
          <view class='list-item-badge'>
            {{chat.notReadCount}}
          </view>
        </block>
        <view class='list-item-content'>
          <view class='list-item-content-title-container'>
            <view class='list-item-content-title'>{{chat.name}}</view>
            <view class='list-item-content-time'>{{chat.lastTime}}</view>
          </view>
          <view class='list-item-content-desc'>
            {{chat.lastContent}}
          </view>
        </view>
      </view>
    </navigator>
  </block>

