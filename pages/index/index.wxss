/**index.wxss**/
.container {
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow-x: hidden;
}

.list-item {
  height: 10vh;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 5px 14px;
  border-bottom: solid 1px #eee;
}

.list-item-icon {
  height: 12vw;
  width: 12vw;
  flex-shrink:0;
  border-radius: 4px;
}

.list-item-badge {
  background-color: red;
  color: white;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  width: 17px;
  height: 17px;
  z-index: 1000;
  position: relative;
  right: 5px;
  top: -5.5vw;
  border-radius: 8px;
}

.list-item-content {
  width: 82vw;
  padding-top: 2px;
  padding-bottom: 2px;
  padding-left: 6px;
  padding-right: 14px;
  height: 40px;
  display: flex;
  flex-direction: column;
}

.list-item-content-title-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 14px;
}

.list-item-content-title {
  color: #222;
  font-size: 15px;
  font-weight: bold;
}

.list-item-content-time {
  color: #939393;
  font-size: 13px;
}

.list-item-content-desc {
  color: #939393;
  font-size: 14px;
  text-overflow : ellipsis; 
  overflow: hidden; 
  white-space:nowrap;
  width: 70vw; 
}